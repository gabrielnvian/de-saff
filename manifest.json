{
    "manifest_version": 3,
    "name": "De-Saff",
    "version": "1.2.0",
    "description": "A better Helpspot experience",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://helpspot.csusm.edu/**"
            ],
            "js": [
                "src/import-settings.js",
                "src/wait-for-cards.js",
                "src/content.js",
                "src/show-all-listener.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "options_page": "options.html",
    "host_permissions": [
        "https://helpspot.csusm.edu/**"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "settings.json"
            ],
            "matches": [
                "https://helpspot.csusm.edu/*"
            ]
        }
    ],
    "action": {
        "default_title": "De-Saff",
        "default_icon": "icons/icon128.png"
    }
}
