{
    "manifest_version": 3,
    "name": "De-Saff",
    "version": "1.1.0",
    "description": "Hides cards where header contains 'Mark Saffell'",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "options_page": "options.html",
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "settings.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_title": "De-Saff"
    }
}
