{
    "manifest_version": 3,
    "name": "De-Saff",
    "version": "1.1.1",
    "description": "Hides cards where header contains 'Mark Saffell'",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "options_page": "options.html",
    "host_permissions": [
        "https://helpspot.csusm.edu/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "settings.json"
            ],
            "matches": [
                "https://helpspot.csusm.edu/*"
            ]
        }
    ],
    "action": {
        "default_title": "De-Saff",
        "default_icon": "icons/icon128.png"
    }
}
